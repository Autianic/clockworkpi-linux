        '0001-arm64-dts-clockworkpi-a06-dts.patch'
        '0002-mfd-axp20x-add-clockworkpi-a06-power-support.patch'
        '0004-gpu-drm-panel-add-cwd686-driver.patch'
        '0005-video-backlight-add-ocp8178-driver.patch'
